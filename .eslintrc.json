{
//arquivo p controle de qualidade do código 
    "env": {
        "browser": true,
        "node": true,
        "es2021": true
        //o código vai rodar no navegador, no Node.js, versão ES2021
    },
    "extends":["eslint:recommended"], // ele herda as regras recomendadas oficiais do ESLint
    "parserOptions":{
        "ecmaVersion":12,
        "sourceType":"module"
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "no-unused-vars": "warn"
    }
}